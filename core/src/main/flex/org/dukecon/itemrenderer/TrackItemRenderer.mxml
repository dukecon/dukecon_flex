<?xml version="1.0"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
                xmlns:s="library://ns.adobe.com/flex/spark"
                xmlns:comp="org.dukecon.components.*"
                xmlns:parsley="http://www.spicefactory.org/parsley"
                height="136"
                click="onItemClick(event)">

    <fx:Declarations>
        <parsley:FastInject property="trackController" type="{TrackController}" />
    </fx:Declarations>

    <fx:Script>
    <![CDATA[
        import org.dukecon.controller.TrackController;
        import org.dukecon.events.ListEvent;
        import org.dukecon.model.Track;

        [Bindable]
        protected var trackIcon:Class;
        [Bindable]
        protected var trackName:String;

        [Bindable]
        protected var track:Track;

        [Inject]
        public var trackController:TrackController;

        [Bindable("dataChange")]
        override public function get data():Object {
            return super.data;
        }

        override public function set data(value:Object):void {
            super.data = value;
            track = Track(data);
            update();
        }

        protected function update():void {
            if (track && trackController) {
                trackIcon = trackController.getIconForTrack(track.id);
                trackName = track.getName(resourceManager.localeChain[0]);
            } else {
                trackIcon = null;
                trackName = null;
            }
            itemLabel.width = this.parent.parent.width - 168;
        }

        protected function onItemClick(event:MouseEvent):void {
            dispatchEvent(new ListEvent(data, ListEvent.ITEM_SELECTED));
        }

        ]]>
  </fx:Script>

    <s:Rect top="0" left="0" width="100%" bottom="0">
        <s:fill>
            <s:SolidColor color="white"/>
        </s:fill>
        <s:stroke>
            <s:SolidColorStroke color="black"/>
        </s:stroke>
    </s:Rect>

    <comp:VectorImage source="{trackIcon}" top="8" left="8" width="120" bottom="8"/>

    <s:HGroup top="8" left="150" right="18" bottom="8" verticalAlign="middle">
        <s:Label id="itemLabel" text="{trackName}" styleName="listTitle"/>
    </s:HGroup>

</s:ItemRenderer>
